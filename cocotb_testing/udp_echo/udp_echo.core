CAPI=2:
name: uwcse:beehive:udp_echo:0.1
description: Beehive UDP echo design

filesets:
    rtl:
        depend:
            - uwcse:buckfast:includes
            - uwcse:buckfast:bsg_mem
            - uwcse:buckfast:bsg_misc
            - uwcse:beehive:data_converters
            - uwcse:beehive:misc
            - uwcse:beehive:empty_tile
            - uwcse:beehive:msgs
            - uwcse:beehive:eth
            - uwcse:beehive:ip
            - uwcse:beehive:udp
            - uwcse:beehive:udp_echo_app
            - uwcse:beehive:topology
            - uwcse:beehive:pyhp_generator
        file_type: systemVerilogSource

targets:
    default:
        filesets: [rtl]
        generate: [pyhp_generate]
    fpga:
        default_tool: vivado
        filesets: [rtl]
        generate: [pyhp_generate]
        toplevel: [udp_echo_top]
    asic:
        default_tool: design_compiler
        filesets: [rtl]
        generate: [pyhp_generate]
        toplevel: [udp_echo_top]
        tools:
            design_compiler:
                script_dir: $BEEHIVE_DESIGN_ROOT/dc
                dc_script: udp_echo_top.tcl
                target_library: $BEEHIVE_DESIGN_ROOT/NangateOpenCellLibrary.db
                libs: $BEEHIVE_DESIGN_ROOT/NangateOpenCellLibrary.db
generate:
    pyhp_generate:
        generator: pyhp_gen
        parameters:
            process_me : [[udp_echo_top_gen.sv.pyv, udp_echo_top_gen.sv]]
